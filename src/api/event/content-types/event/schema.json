      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "description": {
      "type": "richtext",
      "default": "Info coming soon...",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    }
  }
}
